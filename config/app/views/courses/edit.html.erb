<div class="col-md-3"></div>
<div class="col-md-9">                            
    <h2>Edit Course</h2>
    <%= form_for(@course) do |f| %>
        <div class="form-group">
            <label for=" ">ID Course:</label>
            <span><%= @course.id %></span>
        </div>
        <div class="form-group">
            <label for=" ">Course's Name:</label>
            <%= f.text_field :name %>
        </div>
       
        <div class="form-group">
            <label for=" ">Course's Code:</label>
            <%= f.text_field :code %>
        </div>                                                    
        <div class="footer">
            <button type="submit" class="btn btn-success">Update</button>
            <%= link_to '<button type="button" class="btn btn-default">Cancel</button>'.html_safe, courses_path %>
        </div>
    <% end %>
</div>

